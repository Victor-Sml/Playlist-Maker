<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_linear_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp">

    <ImageView
        android:id="@+id/iv_playlist_cover"
        android:layout_width="@dimen/small_artwork_dimensions"
        android:layout_height="@dimen/small_artwork_dimensions"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_artwork" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/tv_playlist_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBody_ExtraLarge"
            tools:text="Top Playlist" />

        <TextView
            android:id="@+id/tv_number_of_tracks"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBody_ExtraLarge"
            tools:text="13 треков" />

    </FrameLayout>

</LinearLayout>