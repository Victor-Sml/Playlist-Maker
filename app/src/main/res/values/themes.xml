<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_black</item>
        <item name="colorSecondaryVariant">@color/yp_text_gray</item>
        <item name="colorOnSecondary">@color/yp_white</item>
        <item name="colorAccent">@color/yp_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSurface">@color/yp_light_gray</item>
        <item name="colorOnSurface">@color/yp_text_gray</item>

        <item name="android:textColorPrimary">@color/yp_black</item>
        <item name="android:textColorSecondary">@color/yp_text_gray</item>

        <item name="textAppearanceSubtitle_Large">@style/TextAppearance.YS_Medium22</item>
        <item name="textAppearanceBody_Medium">@style/TextAppearance.YS_Regular16</item>
        <item name="textAppearanceBody_XSmall">@style/TextAppearance.YS_Regular11</item>
    </style>

</resources>